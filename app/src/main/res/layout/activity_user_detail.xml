<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".UserDetail"
    tools:openDrawer="start">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#8ecae6"
            app:title="User Details"
            app:titleTextColor="@color/black" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="56dp">


        <!--User name-->

        <TextView
            android:id="@+id/fixname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:padding="6sp"
            android:text="Name :"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/fixname"
            android:padding="6sp"
            android:text="Jayesh Bhanudas Wani"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!--User Email-->

        <TextView
            android:id="@+id/fixemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fixname"
            android:layout_marginTop="15dp"
            android:padding="6sp"
            android:text="Email :"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/useremail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/fixname"
            android:padding="6sp"
            android:text="jayesh@gmail.com"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!--User Address-->

        <TextView
            android:id="@+id/fixaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fixemail"
            android:layout_marginTop="15dp"
            android:padding="6sp"
            android:text="Add :"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/useradd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/useremail"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/fixname"
            android:padding="6sp"
            android:text="Savda"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!--User Contact-->

        <TextView
            android:id="@+id/fixph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fixaddress"
            android:layout_marginTop="15dp"
            android:padding="6sp"
            android:text="Contact :"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView

            android:id="@+id/usercontact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/useradd"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/fixname"
            android:padding="6sp"
            android:text="7972963535"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!--User Balance-->

        <TextView
            android:id="@+id/fixbal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fixph"
            android:layout_marginTop="15dp"
            android:padding="6sp"
            android:text="Current Balance :"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/userbal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/usercontact"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/fixbal"
            android:padding="6sp"
            android:text="RS 2000"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="270dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:background="@drawable/mybuttons"
                android:padding="10dp"
                android:text="Back"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/btnpay"
                android:onClick="payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:background="@drawable/mybuttons"
                android:padding="10dp"
                android:text="To Account"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="#ffffff" />
        </LinearLayout>
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>



